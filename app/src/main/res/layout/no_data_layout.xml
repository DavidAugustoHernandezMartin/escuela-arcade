<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigation.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_no_connection_message"
            android:id="@+id/login_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_connection_error"
            android:contentDescription="@string/no_connection" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/login_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"
            android:paddingHorizontal="30dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/login_no_connection_message"
            android:layout_width="wrap_content"
            android:maxWidth="600dp"
            android:layout_height="wrap_content"
            android:text="@string/no_login"/>



</androidx.constraintlayout.widget.ConstraintLayout>